@model Microsoft.Teams.Apps.FAQPlusPlus.Configuration.Models.ChannelViewModel

@using (Ajax.BeginForm("ParseAndSaveChannelIdAsync", "Home", new AjaxOptions { HttpMethod = "POST", OnSuccess = "onSaveSuccess", OnFailure = "onSaveFailure" }, htmlAttributes: new { @class = "formToSubmit" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group" data-form-name="channel">
        <div class="col-lg-3">
            @Html.LabelFor(model => model.ChannelId, htmlAttributes: new { @class = "font-bold" })
            <span class="mandatoryField">*</span>
        </div>
        <div class="col-lg-5">
            @Html.TextBoxFor(model => model.ChannelId, htmlAttributes: new { @class = "form-control channelIdTextBox toggleTextBox", @placeholder = "Enter channel ID." })
            @Html.ValidationMessageFor(model => model.ChannelId, "", htmlAttributes: new { @class = "error-message" })
        </div>
        <div class="col-lg-1">
            <span id="teamStorageStatusIcon"></span>
        </div>
        <div class="col-lg-3">
            <input type="button" value="OK" class="btn btn-primary toggleToEditButton" id="channelSubmitButton" />
            <span class="glyphicon glyphicon-info-sign infoSignMargin" data-toggle="tooltip" title="@Strings.ChannelIdToolTipHoverMessage"></span>
        </div>
        <div class="col-lg-offset-3 col-lg-5">
            <div id="teamStorageStatusMessage" class="error-message"></div>
        </div>
    </div>
}